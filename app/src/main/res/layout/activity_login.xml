<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EEEC">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/top_background1" />

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="500dp"
        android:gravity="right"
        android:layoutDirection="inherit"
        android:orientation="vertical"
        android:weightSum="28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Welcome\nBack"
            android:textColor="#EA6D35"
            android:textSize="44sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:drawableStart="@drawable/email"
            android:drawablePadding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#555555"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:drawableStart="@drawable/password"
            android:drawablePadding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#555555"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="#00FFFFFF"
            android:foreground="@drawable/btn_arraw1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layoutDirection="ltr"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:text="Facebook"
                android:textColor="#3b608c"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#00ffffff"
                app:cornerRadius="8dp"
                app:icon="@drawable/facebook"
                app:iconGravity="textEnd"
                app:iconSize="24dp"
                app:iconTint="#3b608c"
                app:strokeColor="#3b608c"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:text="Google"
                android:textColor="#3b608c"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="#00ffffff"
                app:cornerRadius="8dp"
                app:icon="@drawable/google"
                app:iconGravity="textEnd"
                app:iconSize="24dp"
                app:iconTint="#3b608c"
                app:strokeColor="#3b608c"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Are you a new user? Register"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#3B608C"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>